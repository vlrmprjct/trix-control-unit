// L298N Motor Driver Test

const int in1 = 22;
const int in2 = 23;
const int ena = 2; // PWM Pin f체r Geschwindigkeit

void setup()
{
    pinMode(in1, OUTPUT);
    pinMode(in2, OUTPUT);
    pinMode(ena, OUTPUT);

    Serial.begin(9600);

    TCCR3B = (TCCR3B & 0b11111000) | 0x04;
}

void loop()
{
    Serial.println("Motor vorw채rts");
    digitalWrite(in1, HIGH);
    digitalWrite(in2, LOW);
    analogWrite(ena, 60); // Geschwindigkeit (0 - 255)
    delay(2000);

    Serial.println("Motor stoppt");
    analogWrite(ena, 0);
    delay(1000);

    Serial.println("Motor r체ckw채rts");
    digitalWrite(in1, LOW);
    digitalWrite(in2, HIGH);
    analogWrite(ena, 65);
    delay(2000);

    Serial.println("Motor stoppt");
    analogWrite(ena, 0);
    delay(1000);
}
